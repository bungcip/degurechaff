{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2017",
        "module":"es2015",
        "lib": ["es2016", "es2017", "dom"],
        "strict": false,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "compiled",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}